<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyectofinal.controlador.DetalleProductoController">

    <!-- Título de la Página -->
    <Label layoutX="132.0" layoutY="33.0" style="-fx-font-size: 24px;" text="Detalle del Producto" />

    <!-- Imagen del Producto -->
    <ImageView fx:id="imagenUrl" fitHeight="145.0" fitWidth="151.0" layoutX="329.0" layoutY="68.0">
    </ImageView>
    <!-- Nombre del Producto -->
    <Label fx:id="nombreProductoLabel" layoutX="63.0" layoutY="83.0" style="-fx-font-size: 18px;" text="Nombre" />

    <!-- Categoría del Producto -->
    <Label fx:id="categoriaProductoLabel" layoutX="63.0" layoutY="113.0" style="-fx-font-size: 16px;" text="Categoría" />

    <!-- Precio del Producto -->
    <Label fx:id="precioProductoLabel" layoutX="63.0" layoutY="143.0" style="-fx-font-size: 16px;" text="Precio" />

    <!-- Estado del Producto -->
    <Label fx:id="estadoProductoLabel" layoutX="63.0" layoutY="173.0" style="-fx-font-size: 16px;" text="Estado" />

    <!-- Descripción del Producto -->
